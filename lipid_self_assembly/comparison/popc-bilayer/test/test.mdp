; General setup
integrator                   = md
dt                           = 0.02
nsteps                       = 1000000

; Output
nstxout                      = 0
nstvout                      = 0
nstfout                      = 0
nstlog                       = 3000
nstenergy                    = 3000
nstxout-compressed           = 3000

; Non-bonded interactions
cutoff-scheme                = Verlet
nstlist                      = 20
verlet-buffer-tolerance      = -1
nsttcouple                   = 20
nstpcouple                   = 20
rlist                        = 1.35
coulombtype                  = Reaction-Field
coulomb-modifier             = Potential-shift
rcoulomb-switch              = 0
rcoulomb                     = 1.1
epsilon-r                    = 15
epsilon-rf                   = 0
vdw-type                     = Cut-off
vdw-modifier                 = Potential-shift
rvdw-switch                  = 0
rvdw                         = 1.1

; Temperature control
tcoupl                       = v-rescale
tau-t                        = 1.0 1.0
ref-t                        = 297 297
tc-grps                      = Membrane Solvent

; Pressure control
pcoupl                       = c-rescale
pcoupltype                   = semiisotropic
tau-p                        = 12.0
ref-p                        = 1.0 1.0
compressibility              = 3e-4 3e-4
